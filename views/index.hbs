<div class="container text-center col-8" style="max-width: 800px;">
  <div class="column col mx-auto mt-3">

    {{!-- select name 一定要填，不然無法傳值到後面 --}}
    <form name="form" action="/filter" method="get">
      <label for="">類別：</label>
      <select name="options" onchange="if(this.value != 0) { this.form.submit(); }" class="form-control-lg col-xs-2">
        <option value="all">全部</option>
        <option value="fas fa-home" {{#if (compare filter 'fas fa-home')}} selected {{/if}}>家居物業</option>
        <option value="fas fa-shuttle-van" {{#if (compare filter 'fas fa-shuttle-van')}} selected {{/if}}>交通出行</option>
        <option value="fas fa-grin-beam" {{#if (compare filter 'fas fa-grin-beam')}} selected {{/if}}>休閒娛樂</option>
        <option value="fas fa-utensils" {{#if (compare filter 'fas fa-utensils')}} selected {{/if}}>餐飲食品</option>
        <option value="fas fa-pen" {{#if (compare filter 'fas fa-pen')}} selected {{/if}}>其他</option>
      </select>
    </form>

    <div class="mt-3">
      <h4 class="text-success">總金額</h4>
      <h2 class="text-danger">{{totalAmount}}</h2>
    </div>

    <div class="container" style="max-height: 450px; overflow: scroll;">
      <ul class="list-group list-group-flush">
        {{#each record}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto mr-auto row">
              <i class="{{this.category}} fa-2x d-flex align-items-center ml-4" style="color: #10AAD3;"></i>
              <div class="ml-4">
                <h3 style="text-align: left;">{{this.name}}</h3>
                <small style="text-align: left;">{{this.date}}</small>
              </div>

            </div>
            <div class="d-flex align-items-center">
              <h3 style="display: inline;" class="mt-2 mr-2">{{this.amount}}</h3>
              <a href="/{{this._id}}/edit" class="btn btn-primary mr-3" method="get">修改</a>
              <form action="#" method="post" style="display: inline">
                <button class="btn btn-danger" type="submit">刪除</button>
              </form>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

    <form action="/new" class="mt-3" method="get">
      <button class="btn btn-info btn-lg">新增支出</button>
    </form>

  </div>

</div>