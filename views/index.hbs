<div class="container text-center col-8" style="max-width: 800px;">
  <div class="column col mx-auto mt-3">

    {{!-- select name 一定要填，不然無法傳值到後面 --}}
    <form name="form" action="/" method="get">
      <select name="month" onchange="submit()" class="form-control-lg col-xs-2">
        <option value="">全部月份</option>
        <option value="01" {{#if (compare month '01' )}} selected {{/if}}>一月</option>
        <option value="02" {{#if (compare month '02' )}} selected {{/if}}>二月</option>
        <option value="03" {{#if (compare month '03' )}} selected {{/if}}>三月</option>
        <option value="04" {{#if (compare month '04' )}} selected {{/if}}>四月</option>
        <option value="05" {{#if (compare month '05' )}} selected {{/if}}>五月</option>
        <option value="06" {{#if (compare month '06' )}} selected {{/if}}>六月</option>
        <option value="07" {{#if (compare month '07' )}} selected {{/if}}>七月</option>
        <option value="08" {{#if (compare month '08' )}} selected {{/if}}>八月</option>
        <option value="09" {{#if (compare month '09' )}} selected {{/if}}>九月</option>
        <option value="10" {{#if (compare month '10' )}} selected {{/if}}>十月</option>
        <option value="11" {{#if (compare month '11' )}} selected {{/if}}>十一月</option>
        <option value="12" {{#if (compare month '12' )}} selected {{/if}}>十二月</option>
      </select>


      <select name="category" onchange="submit()" class="form-control-lg col-xs-2">
        <option value="">全部支出</option>
        <option value="fas fa-home" {{#if (compare category 'fas fa-home' )}} selected {{/if}}>家居物業</option>
        <option value="fas fa-shuttle-van" {{#if (compare category 'fas fa-shuttle-van' )}} selected {{/if}}>交通出行
        </option>
        <option value="fas fa-grin-beam" {{#if (compare category 'fas fa-grin-beam' )}} selected {{/if}}>休閒娛樂</option>
        <option value="fas fa-utensils" {{#if (compare category 'fas fa-utensils' )}} selected {{/if}}>餐飲食品</option>
        <option value="fas fa-pen" {{#if (compare category 'fas fa-pen' )}} selected {{/if}}>其他</option>
      </select>
    </form>


    <div class="mt-3">
      <h4 class="text-success">總金額</h4>
      <h2 class="text-danger">{{totalAmount}}</h2>
    </div>

    <div class="container" style="height: 400px; overflow: auto;">
      <ul class="list-group">
        {{#each record}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto mr-auto row">
              <i class="{{this.category}} fa-2x d-flex align-items-center ml-4" style="color: #10AAD3;"></i>
              <div class="ml-4">
                <h3 style="text-align: left;">{{this.name}}</h3>
                <small style="text-align: left;">{{this.date}}</small>
              </div>

            </div>
            <div class="d-flex align-items-center">
              <h3 style="display: inline;" class="mt-2 mr-2">{{this.amount}}</h3>
              <a href="/record/{{this._id}}/edit" class="btn btn-primary mr-3" method="get">修改</a>
              <form action="/record/{{this._id}}?_method=DELETE" method="post" style="display: inline">
                <button class="btn btn-danger" type="submit">刪除</button>
              </form>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>

    <form action="/record/new" class="mt-3" method="get">
      <button class="btn btn-info btn-lg">新增支出</button>
    </form>

  </div>

</div>